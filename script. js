import turtle
import colorsys
import time  # ğŸŸ¢ Ø§Ø¶Ø§ÙÙ‡ Ú©Ø±Ø¯Ù† Ø²Ù…Ø§Ù†

turtle.colormode(255)

t = turtle.Turtle()
t.speed(0)
turtle.bgcolor("black")

n = 36
h = 0

for i in range(360):
    r, g, b = colorsys.hsv_to_rgb(h, 1, 1)
    t.pencolor(int(r*255), int(g*255), int(b*255))
    h += 1/n
    t.forward(i * 2)
    t.left(59)
    time.sleep(0.01)  # ğŸŸ¢ Ø§Ø¶Ø§ÙÙ‡ Ú©Ø±Ø¯Ù† ÙˆÙ‚ÙÙ‡ Ú©ÙˆÚ†Ú©

turtle.done()
