function validateCreditCard(card) {
    const regex = /^(?:\d{16}|\d{4}(?: \d{4}){3}|\d{4}(?:-\d{4}){3})$/;
    return regex.test(card);
}

// Test cases
console.log(validateCreditCard("1234567890123456"));        
console.log(validateCreditCard("1234 5678 9012 3456"));     
console.log(validateCreditCard("1234-5678-9012-3456"));     
console.log(validateCreditCard("4532015112830366"));        
console.log(validateCreditCard("6011 1111 1111 1117"));     

console.log(validateCreditCard("1234567890"));              
console.log(validateCreditCard("1234 5678 9012 34567"));    
console.log(validateCreditCard("1234-5678 9012-3456"));     
console.log(validateCreditCard("1234 567 89012 3456"));
